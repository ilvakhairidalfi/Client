@model IEnumerable<_181022.Model.Departement>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Departement";
}

<div class="card">
    <div class="card-header text-center">
        <h3>Departement</h3>
    </div>
    <div class="card-body">
        <p>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Create New</button>
        </p>
            <table id="tableDepartement" class="table align-items-center text-center table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Division Id</th>
                        <th>Action</th>
                    </th> 
                </thead>
            </table>
    </div>
       
    <!-- Modal -->

    <!-- Create New -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Create New</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form class="m-t-10">
              <div class="modal-body">
                  <div id="createDepartement">
                    <p>Name         :</p> <input type="text" class="form-control" id="departementName">
                    <p>Division Id  :</p> <input type="text" class="form-control" id="divisionId">
                  </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="createDep()">Save</button>
              </div>
          </form>

        </div>
      </div>
    </div>

    <!--Delete-->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Delete</h1>
            @*<div id="btn-deletename"></div>*@
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
              <div id="btn-deletename"></div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            @*<button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="deleteDep">Delete</button>*@
            <div id="btn-delete"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Detail -->
    <div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Details</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>

          <div class="modal-body">
              <div id="detailDepartement"></div>
            @*<div class="card" id="detailDepartement">
                <table id="tableDetails">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Division Id</th>
                        </th> 
                    </thead>
                </table>
            </div>*@
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Edit</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form class="m-t-10">
              <div class="modal-body">
                <div id="editDepartement"></div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="saveEdit()">Save Edit</button>
              </div>
          </form>
        </div>
      </div>
    </div>

</div>


